<Window
    x:Class="DigitRollExample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:units="clr-namespace:DigitRoll.Views.Units;assembly=DigitRoll"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel
        Height="auto"
        Background="Red"
        Orientation="Horizontal">
        <units:DigitRollControl x:Name="rollTextHour" Height="50" />
        <units:DigitRollControl
            x:Name="rollTextMin"
            Height="50"
            Margin="10,0" />
        <units:DigitRollControl x:Name="rollTextSec" Height="50" />
    </StackPanel>
</Window>
